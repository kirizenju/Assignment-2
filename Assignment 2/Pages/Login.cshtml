@page
@model Assignment_2.Pages.LoginModel
@{
}

<div class="container">
    <h1 class="text-center">Login</h1>
    <form method="post" class="my-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="StaffAccount.Hremail" class="control-label">Email</label>
            <input asp-for="StaffAccount.Hremail" class="form-control" required="true" />
            <span asp-validation-for="StaffAccount.Hremail" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="StaffAccount.Hrpassword" class="control-label">Password</label>
            <input asp-for="StaffAccount.Hrpassword" class="form-control" required="true" type="password" />
            <span asp-validation-for="StaffAccount.Hrpassword" class="text-danger"></span>
        </div>
        <div class="form-group text-danger">
            @ViewData["notification"]
        </div>
        <div class="form-group text-center">
            <button method="post" asp-page-handler="login" type="submit" class="btn btn-primary">Login</button>
        </div>
    </form>
</div>
